generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    // Uses connection pooling
    url       = env("VI_PRISMA_URL")
    // Uses direct connection, ⚠️ make sure to keep this to `VI_URL_NON_POOLING`
    // or you'll have dangling databases from migrations
    directUrl = env("VI_URL_NON_POOLING")
}

model Guest {
    id                    Int       @id @default(autoincrement())
    name                  String
    createdAt             DateTime? @default(now())
    firstAccess           DateTime?
    lastAccess            DateTime?
    seats                 Int
    guestCode             String    @unique
    isAttendanceConfirmed Boolean?  @default(false)
    isAttending           Boolean?  @default(false)
}
